<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bill Report</title>
  <style>
    /* Resetting body margins for a clean layout */
    body, html {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      color: #333;
    }

    /* Header styles */
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 15px;
    }

    .header img {
      max-width: 60px; /* Adjust logo size */
    }

    .tenant-name {
      font-size: 20px; /* Adjust font size for tenant name */
      font-weight: 600;
      text-align: center;
      flex: 1;
      padding: 0 10px;
    }

    .report-title {
      text-align: center;
      font-size: 22px;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 1px;
      color: #2c3e50;
      margin-bottom: 20px; /* Add more spacing below the title */
    }

    /* Table styles */
    .bill-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 15px;
    }

    .bill-table th, .bill-table td {
      border: 1px solid #ddd;
      padding: 4px;
      text-align: center;
      font-size: 10px; /* Adjust table font size for better readability */
    }

    .bill-table th {
      background-color: #e91e63;
      color: white;
    }

    .bill-table td {
      background-color: #fff;
    }

    .bill-table tr:nth-child(even) {
      background-color: #f9f9f9;
    }

    .bill-table tr:hover {
      background-color: #f1f1f1;
    }

    /* Adjusting margins and spacing to fit A4 paper */
    @page {
      size: A4;
    }

    /* Making sure the page content is centered on A4 */
    body {
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    /* Reduce font size for bills to fit better */
    .bill-table th, .bill-table td {
      font-size: 8px; /* Reduced font size */
    }

    /* Ensure page content fits within A4 size */
    .pdf-container {
      width: 100%;
      box-sizing: border-box;
    }
  </style>
</head>
<body>
  <div class="pdf-container">
    <!-- Header Section -->
    <div class="header">
      <div class="logo">
        <img src="<%= tenantLogo %>" alt="Tenant Logo">
      </div>
      <div class="tenant-name">
        <%= tenantName %>
      </div>
    </div>

    <!-- Report Title Section -->
    <h1 class="report-title">Bill Report</h1>

    <!-- Bill Table Section -->
    <table class="bill-table">
      <thead>
        <tr>
          <th>Serial No.</th>
          <th>Bill ID</th>
          <th>Customer Name</th>
          <th>Contact</th>
          <th>Address</th>
          <th>Payment Method</th>
          <th>Service</th>
          <th>Sub Total</th>
          <th>CGST%</th>
          <th>CGST Amount</th>
          <th>SGST%</th>
          <th>SGST Amount</th>
          <th>Total Amount</th>
          <th>Payment Status</th>
        </tr>
      </thead>
      <tbody>
        <% bills.forEach((bill, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= bill._id %></td>
          <td><%= bill.customerName %></td>
          <td><%= bill.customerContact %></td>
          <td><%= bill.customerAddress %></td>
          <td><%= bill.paymentMethod %></td>
          <td><%= bill.service %></td>
          <td>₹ <%= bill.subTotal %></td>
          <td><%= bill.cgstPercentage %> %</td>
          <td>₹ <%= bill.cgstAmount %></td>
          <td><%= bill.sgstPercentage %> %</td>
          <td>₹ <%= bill.sgstAmount %></td>
          <td>₹ <%= bill.totalAmount %></td>
          <td><%= bill.paymentStatus %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
